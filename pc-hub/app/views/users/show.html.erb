<%- model_class = User -%>
<div class="section">
  <div class="container">
    <div class="row">
      <div class="page-header">
        <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
      </div>

      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
        <dd><%= @user.name %></dd>
        <dt><strong><%= model_class.human_attribute_name(:nickname) %>:</strong></dt>
        <dd><%= @user.nickname %></dd>
        <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
        <dd><%= @user.email %></dd>
        <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
        <dd><%= @user.country %></dd>
        <dt><strong><%= model_class.human_attribute_name(:state_or_province) %>:</strong></dt>
        <dd><%= @user.state_or_province %></dd>
        <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
        <dd><%= @user.city %></dd>
        <dt><strong><%= model_class.human_attribute_name(:profile_link) %>:</strong></dt>
        <dd><%= @user.profile_link %></dd>
        <dt><strong><%= model_class.human_attribute_name(:additional_information) %>:</strong></dt>
        <dd><%= @user.additional_information %></dd>
      </dl>

      <%= link_to t('.back', :default => t("helpers.links.back")),
                    root_path, :class => 'btn btn-default'  %>
      <% if @user == current_user || current_user.role == "superadmin" %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(@user), :class => 'btn btn-default' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(@user),
                      :method => 'delete',
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
