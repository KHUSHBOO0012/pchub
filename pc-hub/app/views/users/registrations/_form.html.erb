<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class = "row">
    <div class = "col-md-6">
      <%= f.text_field :name %>
      <%= f.text_field :nickname, label: "Nickname (Optional)"%>
      <%= f.email_field :email %>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class = "col-md-6">
      <%= f.text_field :city %>
      <%= f.text_field :state_or_province, label: "State or Province (Optional)"%>
      <%= f.select :country, [["Macedonia, the former Yugoslav Republic of", 0], [2, "Grape"]], { label: "Country" }, { class: "selectpicker" } %>
      <%= f.url_field :profile_link, label: "Profile Link (Optional)" %>
      <%= f.text_area :additional_information, label: "Additionial Information (Optional)"%>
    </div>
  </div>
  <div class="actions">
      <%= f.submit "Save", class: "btn btn-success"  %>
  </div>
<% end %>