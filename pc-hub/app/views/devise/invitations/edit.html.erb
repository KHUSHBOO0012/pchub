<div class="section">
    <div class="row">
        <div class="container">
        	<div class="page-header">
				<h2><%= t 'devise.invitations.edit.header' %></h2>
			</div>

			<%= bootstrap_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>

			  <%= f.hidden_field :invitation_token %>
			  <div class = "row">
			    <div class = "col-md-6">
			      <%= f.text_field :name %>
			      <%= f.text_field :nickname, label: "Nickname (Optional)"%>
			      <%= f.text_field :email %>
			      <%= f.text_field :email_confirmation %>
			      <% if f.object.class.require_password_on_accepting %>
					  <%= f.password_field :password %>
					  <%= f.password_field :password_confirmation %>
			  	  <% end %>
			    </div>
			    <div class = "col-md-6">
			      <%= f.text_field :city %>
			      <%= f.text_field :state_or_province, label: "State or Province (Optional)"%>
			      <%= f.form_group :country, label: {text: "Country"} do %>
			        <%= f.country_select :country, { include_blank: "Select a country" },
			          { class: "form-control selectpicker" } %>
			       <% end %>
			      <%= f.url_field :profile_link, label: "Profile Link (Optional)" %>
			      <%= f.text_area :additional_information, label: "Additional Information (Optional)", rows: 5 %>
			    </div>
			  </div>

			  <p><%= f.submit t("devise.invitations.edit.submit_button") %></p>
			<% end %>
		</div>
	</div>
</div>
